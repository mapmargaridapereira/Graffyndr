<img src="{{photo.imageUrl}}" alt="{{photo.title}}" />
<h3>{{photo.title}}</h3>
<p>By: {{photo.author}}</p><br />
<p>Description: {{photo.description}}</p><br />
<p>Location: {{photo.location}}</p><br />

          
      {{#if isFav}}
        <form action="/gallery/removeFavs/{{photo._id}}" method="post">
          <button class="tag name" type="submit">Remove from my favourite Photos</button>
        </form>
      {{else}}
        <form action="/gallery/addFavs/{{photo._id}}" method="post">
          <button class="tag name" type="submit">Add to my favourite Photos</button>
        </form>
      {{/if}}

