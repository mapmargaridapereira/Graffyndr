h2>Edit a Photo</h2>

<form action="/gallery/{{_id}}/edit" method="post" enctype="multipart/form-data">
    <label>Title:<input type="text" name="title" value="{{title}}"/></label>
    <label>Author:<input type="text" name="author" value="{{author}}"/></label>
    <label>Description:<textarea name="description" cols="30" rows="4">{{description}}</textarea></label>
    <label>Location:<input type="text" name="location"  value="{{location}}"/></label>
    <label>Image:
          <input type="file" name="gallery-image" class="form-control-file" />
          <input type="text" name="existingImage" hidden value="{{imageUrl}}">
        </label>
    <button type="submit">Save Changes</button>


